<%= simple_form_for ([@project, @shot]), html: { multipart: true }  do |f| %>
  <nav class="panel panel-form">
    <%= f.error_notification %>
    <div class="card-content">

      <% unless @shot.s3_key.blank? %>
        <%= image_tag (@shot.get_media_url), id: "previewImage" %>
      <% end %>

      <output id="list"></output>
      <div id="drop_zone" class="drop_zone">

        <div class="file is-centered has-name is-boxed">
          <label class="file-label">
            <%= f.input :s3_key, label: false, input_html: { class: "file-input", type: "file", accept:"video/*;capture=camcorder" }, wrapper: false, label_html: { class: "file-label" } %>
            <span class="file-cta">
              <span class="file-icon">
                <i class="fas fa-camera-retro"></i>
              </span>
              <span class="file-label">
                Dépose ta photo ici
              </span>
            </span>
            <span class="file-name" id="filename">
              ...
            </span>
          </label>
        </div>


      </div>


      <div class="field">
        <div class="control">
          <%= f.input :description, input_html: { class: "textarea", placeholder:"Écris une légende...", rows:'1' } , wrapper: false, label: false,label_html: { class: "label" } %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.button :submit, 'Partager',class:"button is-info" %>
        </div>
      </div>

    </div>
  </nav>
<% end %>
