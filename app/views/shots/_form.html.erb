<%= simple_form_for ([@project, @shot]), html: { multipart: true }  do |f| %>
  <nav class="panel panel-form">

    <%= f.error_notification %>
    <div class="card-content">
      <% unless @shot.user_shot.blank? %>
        <%= image_tag (@shot.user_shot_url), id: "previewImage" %>
      <% end %>

      <output id="list"></output>
      <div id="drop_zone">Dépose ta photo ici</div>
      <br />

      <%= f.input :user_shot, label: false, input_html: { class: "file-input", type: "file" }, wrapper: false, label_html: { class: "file-label" } %>

      <!-- <div class="field">
        <div class="control">
        	<%#= f.input :title, label: "Title", input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
        </div>
      </div> -->

      <div class="field">
      	<div class="control">
        	<%= f.input :description, input_html: { class: "textarea", placeholder:"Écrire une légende...", rows:'1' } , wrapper: false, label: false,label_html: { class: "label" } %>
        </div>
      </div>

      <div class="field">
      	<div class="control ">
        	<%= f.button :submit, 'Partager',class:"button is-info" %>
        </div>
      </div>
    </div>
  </nav>
<% end %>
