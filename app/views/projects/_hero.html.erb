<% if !user_signed_in? %>
	<section class="hero is-medium is-primary is-bold">
		<div class="hero-body">
			<div class="container has-text-centered">
				<h1 class="title is-size-3">
					Le portfolio de la tribu UX
				</h1>
				<h3 class="title is-size-6">
					<span class="has-text-grey-lighter">
						Chaques semaines de nouvelles informations sont ajout√©es aux projets!
					</span>
				</h3>
			</div>
			<br />
			<div class="container has-text-centered">
				<div class="content is-grouped">

						<%= link_to user_google_oauth2_omniauth_authorize_path, class: "button is-primary is-inverted is-medium" do %>
							<span class="icon">
						    <i class="fab fa-google"></i>
						  </span>
						  <span>Se connecter</span>
						<% end %>

				</div>
			</div>
		</div>
	</section>
<% else %>
		<section class="section">
			<nav class="level">
				<!-- Left side -->
				<div class="level-left">
					<div class="level-item">
						<p class="subtitle is-7">
							<strong><%= @projects.length %></strong> projets
						</p>
					</div>
				</div>
				<!-- Right side -->
				<div class="level-right">
					<p class="level-item">
						<%= link_to('Nouveau projet', new_project_path, class:'button is-primary') %>
					</p>
				</div>
			</nav>
		</section>
<% end %>
