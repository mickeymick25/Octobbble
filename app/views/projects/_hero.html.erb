<% if !user_signed_in? %>
	<section class="hero is-primary is-bold is-medium">
		<div class="hero-body">
			<div class="container has-text-centered">
				<h1 class="title is-size-3">
					Le portfolio de la tribu UX
				</h1>
				<h3 class="title is-size-6">
					<span class="has-text-grey-lighter">
						Chaques semaines de nouvelles informations ajout√©es aux <strong><%= @projects.length %></strong> projets de la tribu !
					</span>
