<%= render 'cover', project: @project %>

<div class="section">
  <div class="container">
    <div class="columns">

        <div class="column is-half is-offset-2">
        <% if user_signed_in? %>
          <%#= render 'shots/form', project: @project %>
          <%= render 'shots/direct_upload', project: @project %>
        <% end %>

        <% @project.shots.order('created_at DESC').each do |shot| %>
          <%= render 'project_post', shot: shot  %>
        <% end %>
        </div>

      <div class="column is-3">
        <%= render 'project_detail' %>
        <%= render 'team' %>
        <% render 'project_links' %>
      </div>

    </div>

    <% link_to 'Edit', edit_project_path(@project) %>
  </div>
</div>

<div class="modal" is-active="true">
  <div class="modal-background"></div>
  <div class="modal-content">
    <p class="image">
      <%= image_tag("/octo-logo.png", id: "modal_image") %>
    </p>
  </div>
  <button class="modal-close is-large" aria-label="close"></button>
</div>
